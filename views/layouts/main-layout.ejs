        <div>
          <%- include('main-nav') %>
        </div>
      <% } %>

      <div class="container">
          <%- body %> 
      </div>
    </main>

    <script>
      function increaseValue(){
        let jumlah = document.getElementById('produkValue');
        jumlah.value = parseInt(jumlah.value) + 1;
      }

      function decreaseValue(){
        let jumlah = document.getElementById('produkValue');
        if(parseInt(jumlah.value) > 1) jumlah.value = parseInt(jumlah.value) - 1;
      }
    </script>
  </body>
</html>